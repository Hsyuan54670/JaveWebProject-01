<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hsyuan.tliaswebstduy.mapper.EmpExprMapper">
    <!--批量添加员工的工作经历-->
    <insert id="insertBatch">
        insert into emp_expr(emp_id,begin,end,company,job)
        values
        <foreach collection="exprList" item="expr" separator=",">    <!--collection:集合名称,item:集合中的每个元素,separator:分隔符作用于每个元素之间 open:开始符号 close:结束符号-->
            (#{expr.empId},#{expr.begin},#{expr.end},#{expr.company},#{expr.job})   -- 每个元素的每个属性
        </foreach>
    </insert>
        <!--批量删除员工的工作经历-->
    <delete id="deleteBatch">
        delete from emp_expr where emp_id in
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>
</mapper>